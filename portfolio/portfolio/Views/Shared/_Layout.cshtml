<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hello world - Christian Reyes</title>
    <link rel="shortcut icon" type="image/ico" href="~/images/logo.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-icon-groups">
                <div class="icon-group-top">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CR</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="icon-group-middle navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/images/icons8-home-page-32.png" />
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="#section-about">
                                <img src="~/images/icons8-male-user-32.png" />
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="#section-skills">
                                <img src="~/images/icons8-wrench-32.png" />
                            </a>
                        </li>
                        <li class="nav-item disable">
                            @*@Html.ActionLink("Contact me", "Contact", "Home", null, new { @class = "nav-link" })*@
                            <a href="#section-contact">
                                <img src="~/images/icons8-email-open-32.png" alt="Alternate Text" />
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="icon-group-bottom">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="lnk-linkedin" href="https://www.linkedin.com/in/creyes-dev/">
                                <img src="~/images/icons8-linkedin.svg" alt="Alternate Text" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted bg-dark-grey">
        <div class="container">
            Fully coded by Christian Reyes &copy;@DateTime.Now.Year
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
